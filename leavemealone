# Default server configuration
#

# PUT THIS IN /etc/nginx/sites-available and /etc/nginx/sites-enabled

server {
	listen 80;
        listen [::]:80;
	server_name leavemealonesweater.com www.leavemealonesweater.com;

        location ~ /.well-known {
            root /var/www/leavemealonesweater;
        }
        location / {
            return 301 https://$host$request_uri;
        }

}

server {
        listen 443 ssl;
	server_name leavemealonesweater.com www.leavemealonesweater.com;
        ssl_certificate /etc/letsencrypt/live/www.leavemealonesweater.com/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/www.leavemealonesweater.com/privkey.pem;

        location / {
            root /var/www/leavemealonesweater;
            try_files  $uri $uri.html $uri/index.html index.html;
	    # index index.html;
	    add_header Vary "User-Agent";
        }

	# pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
	#
	#location ~ \.php$ {
	#	include snippets/fastcgi-php.conf;
	#
	#	# With php7.0-cgi alone:
	#	fastcgi_pass 127.0.0.1:9000;
	#	# With php7.0-fpm:
	#	fastcgi_pass unix:/run/php/php7.0-fpm.sock;
	#}

	# deny access to .htaccess files, if Apache's document root
	# concurs with nginx's one
	#
	#location ~ /\.ht {
	#	deny all;
	#}
}


